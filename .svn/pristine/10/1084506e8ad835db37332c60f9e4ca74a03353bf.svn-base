                                                window.location.href='{{URL::to('/') }}/admin/stock/request/view/{{$id}}';
                                            });
                                
                              }else{
                                sweetAlert("Oops...",'' , "error");
                              }
                            },
                            error: function(xhr, status, error){
                            },
                            processData: false,
                            contentType: false
                        });
        });

        
